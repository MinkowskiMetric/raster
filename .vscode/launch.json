    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'raster' (x86-64)",
            "cargo": {
                "args": [
                    "test",
                    "--target",
                    "x86_64-apple-darwin",
                    "--no-run",
                    "--lib",
                    "--package=raster"
                ],
                "filter": {
                    "name": "raster",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'raster'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=raster"
                ],
                "filter": {
                    "name": "raster",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'raster'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raster",
                    "--package=raster",
                    "--release"
                ],
                "filter": {
                    "name": "raster",
                    "kind": "bin"
                }
            },
            "args": ["-w", "320", "-h", "240", "--scene=teapot", "--min-passes=100", "output/teapot.png"],
            "cwd": "${workspaceFolder}"
        },
